{
  "name": "notes-app",
  "version": "1.0.1",
  "description": "A simple notes application with MySQL backend",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest --verbose",
    "test:unit": "jest tests/unit.test.js tests/app.test.js --verbose",
    "test:integration": "jest tests/integration.test.js --verbose --runInBand",
    "test:performance": "node tests/performance.test.js",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release:patch": "bash scripts/release.sh patch",
    "release:minor": "bash scripts/release.sh minor",
    "release:major": "bash scripts/release.sh major",
    "docker:build": "docker build -t notes-app:latest .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down"
  },
  "keywords": [
    "notes",
    "mysql",
    "express",
    "rest-api"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/notes-app.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/notes-app/issues"
  },
  "homepage": "https://github.com/yourusername/notes-app#readme",
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.5"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "index.js",
      "!tests/**"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  }
}